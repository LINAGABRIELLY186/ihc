generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Modelos para o SAGE
model Subject {
  id      String @id @default(uuid())
  name    String
  teacherId String? // Opcional, para ligar ao professor
  createdAt DateTime @default(now())
}